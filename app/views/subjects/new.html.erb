<h2>Add a Subject</h2>

<%= form_with model: @subject, local: true do |form| %>
  <div class="uploadflex">
    <div class="upload">

      <div class="uploadform">
        <%= form.label :name, "Subject Name" %>
        <%= form.text_field :name %>
      </div>

      <div class="uploadform">
        <%= form.submit %>
      </div>

    </div>
  </div>
<% end %>
