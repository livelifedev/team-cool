<div class="docstitle">
  <h2> Upload </h2>
</div>

<%= render 'shared/errors', obj: @document %>

<%= form_with model: @document, local: true do |form| %>
  <div class="uploadflex">
    <div class="upload">

      <div class="uploadform">
        <%= form.label :title %>
        <%= form.text_field :title, :class => "titleform" %>
      </div>

      <div class="uploadform">
        <%= form.label :description %>
        <%= form.text_area :description %>
      </div>

      <div class="uploadform">
        <p>Subject(s)</p>
        <%= form.collection_check_boxes :subject_ids, @subjects, :id, :name do |sub| %>
          <% sub.label(class: "checkbox-inline input_checkbox") {sub.check_box(class: "checkbox") + sub.text} %>
        <% end %>
      </div>

      <div class="uploadform">
        <p>Type</p>
        <% @types.each do |option| %>
          <div class="doctype">
            <%= form.radio_button :doc_type, option %>
            <%= form.label "doc_type_#{option}".to_sym, option %>
          </div>
        <% end %>
      </div>

      <div class="uploadform">
        <%= form.label :document, "Upload file" %>
        <div class="file-upload">
          <%= form.file_field :file, accept: "application/pdf" %>
          <p>(PDF only)</p>
        </div>
      </div>

      <button class="btn btn-primary btn-block" id="uploadbutton">
        <%= form.submit %>
      </button>

    </div>
  </div>
<% end %>


